<UserControl x:Class="NetAF.Targets.WPF.Layouts.ButtonOnlyLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetAF.Targets.WPF.Layouts"
             xmlns:wpf="clr-namespace:NetAF.Targets.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <Style x:Key="LargeCommandButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="SmallCommandButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <wpf:NetAFMovementCommandPicker x:Name="MovementCommandPicker"
            FontSize="14"
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.RowSpan="2"/>
        <wpf:NetAFCommandPicker x:Name="GeneralCommandPicker" 
             ShowPersistenceCommands="False" 
             ShowExecutionCommands="False" 
             ShowMovementCommands="False" 
             ShowSceneCommands="False"
             ShowAcknowledgeButton="False"
             ShowConversationCommands="False"
             ShowRegionMapCommands="False"
             InformationCommandButtonStyle="{StaticResource SmallCommandButtonStyle}"
             FrameCommandButtonStyle="{StaticResource SmallCommandButtonStyle}"
             GlobalCommandButtonStyle="{StaticResource SmallCommandButtonStyle}"
             PromptButtonStyle="{StaticResource SmallCommandButtonStyle}"
             ClearButtonStyle="{StaticResource SmallCommandButtonStyle}"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Grid.Row="0"
             Grid.Column="1">
        </wpf:NetAFCommandPicker>
        <wpf:NetAFCommandPicker x:Name="SceneCommandPicker" 
             ShowPersistenceCommands="False" 
             ShowExecutionCommands="False" 
             ShowMovementCommands="False"
             ShowFrameCommands="False"
             ShowGlobalCommands="False"
             ShowInformationCommands="False"
             ShowUncategorizedCommands="False"
             SceneCommandButtonStyle="{StaticResource LargeCommandButtonStyle}"
             ConversationCommandButtonStyle="{StaticResource LargeCommandButtonStyle}"
             RegionMapCommandButtonStyle="{StaticResource LargeCommandButtonStyle}"
             AcknowledgeButtonStyle="{StaticResource LargeCommandButtonStyle}"
             PromptButtonStyle="{StaticResource LargeCommandButtonStyle}"
             ClearButtonStyle="{StaticResource LargeCommandButtonStyle}"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Grid.Row="1"
             Grid.Column="1">
        </wpf:NetAFCommandPicker>
    </Grid>
</UserControl>
