<UserControl x:Class="NetAF.Targets.WPF.Controls.NetAFTextTerminal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:effects="clr-namespace:LoFiEffects.WPF.Effects;assembly=LoFiEffects.WPF"
             xmlns:local="clr-namespace:NetAF.Targets.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Storyboard x:Key="TransitionOut">
            <DoubleAnimation Storyboard.TargetName="TextBlock" Storyboard.TargetProperty="Effect.Intensity" From="0" To="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NetAFTextTerminal}, Path=TransitionStrength, Mode=OneWay}" Duration="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NetAFTextTerminal}, Path=TransitionDuration, Mode=OneWay}"/>
        </Storyboard>
        <Storyboard x:Key="TransitionIn">
            <DoubleAnimation Storyboard.TargetName="TextBlock" Storyboard.TargetProperty="Effect.Intensity" From="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NetAFTextTerminal}, Path=TransitionStrength, Mode=OneWay}" To="0" Duration="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NetAFTextTerminal}, Path=TransitionDuration, Mode=OneWay}"/>
        </Storyboard>
    </UserControl.Resources>
    <TextBlock Name="TextBlock" Foreground="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NetAFTextTerminal}, Path=Foreground, Mode=OneWay}" Padding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NetAFTextTerminal}, Path=Padding, Mode=OneWay}" TextWrapping="Wrap">
        <TextBlock.Effect>
            <effects:PixelateEffect Intensity="0"/>
        </TextBlock.Effect>
    </TextBlock>
</UserControl>
