<UserControl x:Class="NetAF.Targets.WPF.Layouts.PromptAndTerminalLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetAF.Targets.WPF.Layouts"
             xmlns:wpf="clr-namespace:NetAF.Targets.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <wpf:NetAFTerminal x:Name="Terminal" Margin="10,10,10,0" Padding="10" Grid.Row="0"/>
        <wpf:NetAFPrompt Margin="10,0,10,10" Grid.Row="2"/>
    </Grid>
</UserControl>
