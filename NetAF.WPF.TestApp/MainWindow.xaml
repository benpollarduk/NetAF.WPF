<Window x:Class="NetAF.WPF.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:layouts="clr-namespace:NetAF.Targets.WPF.InputLayouts;assembly=NetAF.WPF"
        xmlns:controls="clr-namespace:NetAF.Targets.WPF.Controls;assembly=NetAF.WPF"
        xmlns:outputlayouts="clr-namespace:NetAF.Targets.WPF.OutputLayouts;assembly=NetAF.WPF"
        mc:Ignorable="d"
        Title="NetAF.WPF.TestApp" Height="850" Width="1000">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/NetAF.WPF;component/Targets/WPF/Styles/DarkStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource MainWindowBackgroundBrush}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <controls:NetAFMarkupTerminal x:Name="Terminal" Style="{StaticResource DarkMarkupTerminalStyle}" Margin="10" Grid.Row="0"/>
        <!--<outputlayouts:SplitMapLayout x:Name="OutputLayout" Style="{StaticResource DarkSplitMapLayoutStyle}" Margin="10" Grid.Row="0"/>-->
        <Expander Header="Prompt" Style="{StaticResource DarkExpanderStyle}" Padding="6" Margin="10,0,10,10" Grid.Row="1">
            <controls:NetAFPrompt Style="{StaticResource DarkPromptStyle}"/>
        </Expander>
        <Expander Header="Buttons" Style="{StaticResource DarkExpanderStyle}" MaxHeight="210" Padding="4" Margin="10,0,10,10" Grid.Row="2">
            <layouts:ButtonLayout x:Name="ButtonLayout" Style="{StaticResource DarkButtonLayoutStyle}"/>
        </Expander>
        <Expander Header="Restore" Style="{StaticResource DarkExpanderStyle}" MaxHeight="250" Padding="4" Margin="10,0,10,10" Grid.Row="3">
            <controls:NetAFFileManager Style="{StaticResource DarkNetAFFileManagerStyle}"/>
        </Expander>
    </Grid>
</Window>
