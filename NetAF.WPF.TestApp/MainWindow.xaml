<Window x:Class="NetAF.WPF.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:layouts="clr-namespace:NetAF.Targets.WPF.Layouts;assembly=NetAF.WPF"
        xmlns:controls="clr-namespace:NetAF.Targets.WPF.Controls;assembly=NetAF.WPF"
        mc:Ignorable="d"
        Title="NetAF.WPF.TestApp" Background="DarkGray" Height="850" Width="1000">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/NetAF.WPF;component/Targets/WPF/Styles/DefaultStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--<controls:NetAFTextTerminal x:Name="Terminal" Foreground="YellowGreen" Background="Black" FontSize="16" FontFamily="Cascadia Mono" Margin="10" Padding="4" Grid.Row="0"/>-->
        <controls:NetAFMarkupTerminal x:Name="Terminal" Background="Black" Margin="10" Padding="4" Grid.Row="0"/>
        <controls:NetAFPrompt Margin="10,0,10,10" Style="{StaticResource PromptStyle}" Grid.Row="1"/>
        <layouts:ButtonLayout x:Name="ButtonLayout" Margin="10,0,10,10" Style="{StaticResource ButtonLayoutStyle}" Grid.Row="2"/>
    </Grid>
</Window>
