<Window x:Class="NetAF.WPF.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:NetAF.Targets.WPF.Controls;assembly=NetAF.WPF"
        mc:Ignorable="d"
        Title="NetAF.WPF.TestApp" Background="DarkGray" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <wpf:NetAFTerminal x:Name="NetAFTerminal" Margin="10,10,10,0" Padding="10" Grid.Row="0"/>
        <wpf:NetAFMovementCommandPicker x:Name="NetAFMovementCommandPicker" Grid.Row="1"/>
        <wpf:NetAFCommandPicker x:Name="NetAFCommandPicker" ShowPersistenceCommands="False" ShowExecutionCommands="False" ShowMovementCommands="False" HorizontalAlignment="Left" Grid.Row="2"/>
        <wpf:NetAFPrompt x:Name="NetAFPrompt" Margin="10" Grid.Row="3"/>
    </Grid>
</Window>
