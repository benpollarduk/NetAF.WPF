<UserControl x:Class="NetAF.Targets.WPF.Controls.NetAFFileManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NetAF.Targets.WPF.Controls"
             xmlns:wpf="clr-namespace:NetAF.Targets.WPF"
             xmlns:converters="clr-namespace:NetAF.Targets.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <RoutedUICommand x:Key="SaveCommand"/>
        <RoutedUICommand x:Key="LoadCommand"/>
        <RoutedUICommand x:Key="NewCommand"/>
        <RoutedUICommand x:Key="DeleteCommand"/>
        <converters:ObjectNotNullToBooleanConverter x:Key="ObjectNotNullToBooleanConverter"/>
    </UserControl.Resources>
    <UserControl.CommandBindings>
        <CommandBinding x:Name="SaveCommandBinding" Command="{StaticResource SaveCommand}" Executed="SaveCommandBinding_Executed"/>
        <CommandBinding x:Name="LoadCommandBinding" Command="{StaticResource LoadCommand}" Executed="LoadCommandBinding_Executed"/>
        <CommandBinding x:Name="NewCommandBinding" Command="{StaticResource NewCommand}" Executed="NewCommandBinding_Executed"/>
        <CommandBinding x:Name="DeleteCommandBinding" Command="{StaticResource DeleteCommand}" Executed="DeleteCommandBinding_Executed"/>
    </UserControl.CommandBindings>
    <Grid IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NetAFFileManager}, Path=IsSaveOrLoadAvailable, Mode=OneWay}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox Name="RestorePointsListBox" ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NetAFFileManager}, Path=AvailableRestorePoints, Mode=OneWay}" Grid.Row="0">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type wpf:RestorePointPath}">
                    <Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Name:" Grid.Column="0"/>
                            <Label Content="{Binding Path=RestorePoint.Name, Mode=OneWay}" Grid.Column="1"/>
                            <Label Content="Creation Time:" Grid.Column="2"/>
                            <Label Content="{Binding Path=RestorePoint.CreationTime, Mode=OneWay}" Grid.Column="3"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="New" 
                    Command="{StaticResource NewCommand}"
                    Grid.Column="0"/>
            <Button Content="Delete" 
                    Command="{StaticResource DeleteCommand}"
                    CommandParameter="{Binding ElementName=RestorePointsListBox, Path=SelectedItem, Mode=OneWay}" 
                    IsEnabled="{Binding ElementName=RestorePointsListBox, Path=SelectedItem, Mode=OneWay, Converter={StaticResource ObjectNotNullToBooleanConverter}}" 
                    Grid.Column="1"/>
            <Button Content="Save" 
                    Command="{StaticResource SaveCommand}" 
                    CommandParameter="{Binding ElementName=RestorePointsListBox, Path=SelectedItem, Mode=OneWay}" 
                    IsEnabled="{Binding ElementName=RestorePointsListBox, Path=SelectedItem, Mode=OneWay, Converter={StaticResource ObjectNotNullToBooleanConverter}}" 
                    Grid.Column="2"/>
            <Button Content="Load" 
                    Command="{StaticResource LoadCommand}"
                    CommandParameter="{Binding ElementName=RestorePointsListBox, Path=SelectedItem, Mode=OneWay}" 
                    IsEnabled="{Binding ElementName=RestorePointsListBox, Path=SelectedItem, Mode=OneWay, Converter={StaticResource ObjectNotNullToBooleanConverter}}" 
                    Grid.Column="3"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Status:" Grid.Column="0"/>
            <Label Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NetAFFileManager}, Path=Status, Mode=OneWay}" Grid.Column="1"/>
        </Grid>
    </Grid>
</UserControl>
