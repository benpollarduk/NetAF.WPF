<Window x:Class="NetAF.WPF.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:layouts="clr-namespace:NetAF.Targets.WPF.Layouts;assembly=NetAF.WPF"
        xmlns:controls="clr-namespace:NetAF.Targets.WPF.Controls;assembly=NetAF.WPF"
        mc:Ignorable="d"
        Title="NetAF.WPF.TestApp" Background="DarkGray" Height="800" Width="1000">
    <Window.Resources>
        <Style x:Key="GiganticCommandButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="MinHeight" Value="100"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style x:Key="LargeCommandButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="SmallCommandButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style x:Key="CommandPickerStyle" TargetType="controls:NetAFCommandPicker">
            <Setter Property="SceneCommandButtonStyle" Value="{StaticResource LargeCommandButtonStyle}"/>
            <Setter Property="ConversationCommandButtonStyle" Value="{StaticResource LargeCommandButtonStyle}"/>
            <Setter Property="RegionMapCommandButtonStyle" Value="{StaticResource LargeCommandButtonStyle}"/>
            <Setter Property="AcknowledgeButtonStyle" Value="{StaticResource LargeCommandButtonStyle}"/>
            <Setter Property="PromptButtonStyle" Value="{StaticResource LargeCommandButtonStyle}"/>
            <Setter Property="ClearButtonStyle" Value="{StaticResource LargeCommandButtonStyle}"/>
            <Setter Property="InformationCommandButtonStyle" Value="{StaticResource SmallCommandButtonStyle}"/>
            <Setter Property="FrameCommandButtonStyle" Value="{StaticResource SmallCommandButtonStyle}"/>
            <Setter Property="GlobalCommandButtonStyle" Value="{StaticResource SmallCommandButtonStyle}"/>
            <Setter Property="PromptButtonStyle" Value="{StaticResource LargeCommandButtonStyle}"/>
            <Setter Property="ClearButtonStyle" Value="{StaticResource SmallCommandButtonStyle}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>
        <Style x:Key="MovementCommandPickerStyle" TargetType="controls:NetAFMovementCommandPicker">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="ButtonOnlyLayoutStyle" TargetType="layouts:ButtonOnlyLayout">
            <Setter Property="GeneralCommandPickerStyle">
                <Setter.Value>
                    <Style TargetType="controls:NetAFCommandPicker" BasedOn="{StaticResource CommandPickerStyle}">
                        <Setter Property="PromptButtonStyle" Value="{StaticResource SmallCommandButtonStyle}"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="SceneCommandPickerStyle">
                <Setter.Value>
                    <Style TargetType="controls:NetAFCommandPicker" BasedOn="{StaticResource CommandPickerStyle}">
                        <Setter Property="AcknowledgeButtonStyle" Value="{StaticResource GiganticCommandButtonStyle}"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="MovementCommandPickerStyle" Value="{StaticResource MovementCommandPickerStyle}"/>
        </Style>
        <Style x:Key="PromptOnlyLayoutStyle" TargetType="layouts:PromptOnlyLayout">
            <Setter Property="PromptStyle">
                <Setter.Value>
                    <Style TargetType="controls:NetAFPrompt">
                        <Setter Property="Margin" Value="10"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontFamily" Value="Cascadia Mono"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--<controls:NetAFTextTerminal x:Name="Terminal" Foreground="YellowGreen" Background="Black" FontSize="16" FontFamily="Cascadia Mono" Margin="10" Padding="4" Grid.Row="0"/>-->
        <controls:NetAFMarkupTerminal x:Name="Terminal" Background="Black" Margin="10" Padding="4" Grid.Row="0"/>
        <Grid Margin="10,0,10,10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Input:" VerticalContentAlignment="Center" Grid.Column="0"/>
            <RadioButton Name="PromptRadioButton" Content="Prompt" VerticalContentAlignment="Center" Grid.Column="2" Checked="PromptRadioButton_Checked"/>
            <RadioButton Name="ButtonsRadioButton" Content="Buttons" IsChecked="True" VerticalContentAlignment="Center" Grid.Column="4" Checked="ButtonsRadioButton_Checked"/>
            <RadioButton Name="CombinationRadioButton" Content="Combination" VerticalContentAlignment="Center" Grid.Column="6" Checked="CombinationRadioButton_Checked"/>
        </Grid>
        <ContentControl Name="InputControl" Margin="10,0,10,10" Grid.Row="2">
            <ContentControl.Content>
                <layouts:ButtonOnlyLayout/>
            </ContentControl.Content>
            <ContentControl.Resources>
                <Style TargetType="layouts:CombinationLayout">
                    <Setter Property="ButtonOnlyLayoutStyle" Value="{StaticResource ButtonOnlyLayoutStyle}"/>
                    <Setter Property="PromptOnlyLayoutStyle" Value="{StaticResource PromptOnlyLayoutStyle}"/>
                </Style>
                <Style TargetType="layouts:ButtonOnlyLayout" BasedOn="{StaticResource ButtonOnlyLayoutStyle}"/>
                <Style TargetType="layouts:PromptOnlyLayout" BasedOn="{StaticResource PromptOnlyLayoutStyle}"/>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
