<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:NetAF.Targets.WPF.Controls"
                    xmlns:layouts="clr-namespace:NetAF.Targets.WPF.InputLayouts"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime" xmlns:outputlayouts="clr-namespace:NetAF.Targets.WPF.OutputLayouts">
    
    <!--button background brush-->
    <SolidColorBrush x:Key="MainControlBackgroundBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="MainControlForegroundBrush" Color="LightGreen"/>
    <SolidColorBrush x:Key="MainControlBackgroundDisabledBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="MainControlForegroundDisabledBrush" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="MainWindowBackgroundBrush" Color="#FF505050"/>
    <FontFamily x:Key="MainControlFontFamily">Segoe UI</FontFamily>
    <system:Double x:Key="SectionSpacing">20</system:Double>

    <!--styling for custom scroll bars-->
    <Style x:Key="CustomScrollBarStyle" TargetType="ScrollBar">
        <Setter Property="Width" Value="10"/>
        <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid Background="{StaticResource MainControlBackgroundBrush}">
                        <Track Name="PART_Track" IsDirectionReversed="true">
                            <Track.Thumb>
                                <Thumb>
                                    <Thumb.Style>
                                        <Style TargetType="Thumb">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="{StaticResource MainControlForegroundBrush}"/>
                                                                    <Setter Property="CornerRadius" Value="5"/>
                                                                    <Setter Property="Margin" Value="2"/>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsEnabled" Value="False">
                                                                            <Setter Property="Background" Value="{StaticResource MainControlForegroundDisabledBrush}"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Thumb.Style>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--styling for all buttons-->
    <Style x:Key="CustomButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource MainControlFontFamily}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="3">
                        <Border.Child>
                            <Label x:Name="ButtonContent"
                                   Content="{TemplateBinding Content}"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                   HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                   Foreground="{TemplateBinding Foreground}"/>
                        </Border.Child>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Foreground}"/>
                            <Setter TargetName="ButtonContent" Property="Foreground" Value="Black"/>
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource MainControlBackgroundDisabledBrush}"/>
                            <Setter TargetName="ButtonContent" Property="Foreground" Value="{StaticResource MainControlForegroundDisabledBrush}"/>
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{StaticResource MainControlForegroundDisabledBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--styling for all arrow buttons-->
    <Style x:Key="CustomArrowButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}"
                        CornerRadius="3">
                        <Border.Child>
                            <Label x:Name="ButtonContent"
                               FontFamily="{TemplateBinding FontFamily}"
                               HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                               VerticalAlignment="{TemplateBinding VerticalAlignment}"
                               HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                               VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                               Foreground="{TemplateBinding Foreground}">
                                <Label.Content>
                                    <Path Data="m0,5 l 10,0 l-5,-5 z" 
                                          Fill="{Binding ElementName=ButtonContent, Path=Foreground, Mode=OneWay}" 
                                          Stroke="{Binding ElementName=ButtonContent, Path=Foreground, Mode=OneWay}"/>
                                </Label.Content>
                            </Label>
                        </Border.Child>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Foreground}"/>
                            <Setter TargetName="ButtonContent" Property="Foreground" Value="Black"/>
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource MainControlBackgroundDisabledBrush}"/>
                            <Setter TargetName="ButtonContent" Property="Foreground" Value="{StaticResource MainControlForegroundDisabledBrush}"/>
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{StaticResource MainControlForegroundDisabledBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--styling for pan and move buttons-->
    <Style x:Key="PanAndMoveButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomButtonStyle}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MainControlForegroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource MainControlForegroundBrush}"/>
    </Style>

    <!--styling for pan and move buttons-->
    <Style x:Key="PanAndMoveArrowButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomArrowButtonStyle}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MainControlForegroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource MainControlForegroundBrush}"/>
    </Style>
    
    <!--style for the medium buttons used for commands-->
    <Style x:Key="MediumCommandButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomButtonStyle}">
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="MinHeight" Value="50"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="0,0,4,4"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!--style for the small buttons used for commands-->
    <Style x:Key="SmallCommandButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomButtonStyle}">
        <Setter Property="MinWidth" Value="50"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="0,0,4,4"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

    <!--style for the file manager buttons-->
    <Style x:Key="FileManagerButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomButtonStyle}">
        <Setter Property="MinWidth" Value="50"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MainControlForegroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource MainControlForegroundBrush}"/>
    </Style>

    <!--general style for the command pickers-->
    <Style x:Key="CommandPickerStyle" TargetType="{x:Type controls:NetAFCommandPicker}">
        <Setter Property="SceneCommandButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource MediumCommandButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="LightSteelBlue"/>
                    <Setter Property="Foreground" Value="LightSteelBlue"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ConversationCommandButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource MediumCommandButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="LightPink"/>
                    <Setter Property="Foreground" Value="LightPink"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="RegionMapCommandButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource MediumCommandButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="LightPink"/>
                    <Setter Property="Foreground" Value="LightPink"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="AcknowledgeButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource MediumCommandButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="LightSteelBlue"/>
                    <Setter Property="Foreground" Value="LightSteelBlue"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="PromptButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource SmallCommandButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="LightSteelBlue"/>
                    <Setter Property="Foreground" Value="LightSteelBlue"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="InformationCommandButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource SmallCommandButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="LightPink"/>
                    <Setter Property="Foreground" Value="LightPink"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="FrameCommandButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource SmallCommandButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="LightPink"/>
                    <Setter Property="Foreground" Value="LightPink"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="GlobalCommandButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource SmallCommandButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="LightPink"/>
                    <Setter Property="Foreground" Value="LightPink"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ClearButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource SmallCommandButtonStyle}">
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="HotPink"/>
                    <Setter Property="Foreground" Value="HotPink"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>
    
    <!--styling for the button layout-->
    <Style x:Key="DarkButtonLayoutStyle" TargetType="{x:Type layouts:ButtonLayout}">
        <Setter Property="SectionSpacing" Value="{StaticResource SectionSpacing}"/>
        <Setter Property="GeneralCommandPickerStyle" Value="{StaticResource CommandPickerStyle}"/>
        <Setter Property="SceneCommandPickerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type controls:NetAFCommandPicker}" BasedOn="{StaticResource CommandPickerStyle}">
                    <Setter Property="AcknowledgeButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource MediumCommandButtonStyle}">
                                <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource MainControlForegroundBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource MainControlForegroundBrush}"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="PromptButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource MediumCommandButtonStyle}">
                                <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                                <Setter Property="BorderBrush" Value="LightSteelBlue"/>
                                <Setter Property="Foreground" Value="LightSteelBlue"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="MovementCommandPickerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type controls:NetAFMovementCommandPicker}">
                    <Setter Property="SectionSpacing" Value="{StaticResource SectionSpacing}"/>
                    <Setter Property="NorthButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveArrowButtonStyle}"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="EastButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveArrowButtonStyle}">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="90"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="SouthButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveArrowButtonStyle}">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="WestButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveArrowButtonStyle}">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="270"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="UpButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveButtonStyle}">
                                <Setter Property="Content" Value="Up"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="DownButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveButtonStyle}">
                                <Setter Property="Content" Value="Down"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="RegionMapCommandPickerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type controls:NetAFRegionMapCommandPicker}">
                    <Setter Property="SectionSpacing" Value="{StaticResource SectionSpacing}"/>
                    <Setter Property="PanNorthButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveArrowButtonStyle}"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="PanEastButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveArrowButtonStyle}">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="90"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="PanSouthButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveArrowButtonStyle}">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="PanWestButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveArrowButtonStyle}">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="270"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="PanUpButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveButtonStyle}">
                                <Setter Property="Content" Value="Up"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="PanDownButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveButtonStyle}">
                                <Setter Property="Content" Value="Down"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="PanResetButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveButtonStyle}">
                                <Setter Property="Content" Value="Reset"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="ZoomInButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveButtonStyle}">
                                <Setter Property="Content" Value="In"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="ZoomOutButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveButtonStyle}">
                                <Setter Property="Content" Value="Out"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="EndButtonStyle">
                        <Setter.Value>
                            <Style TargetType="Button" BasedOn="{StaticResource PanAndMoveButtonStyle}">
                                <Setter Property="Content" Value="End"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!--styling for the prompt-->
    <Style x:Key="DarkPromptStyle" TargetType="{x:Type controls:NetAFPrompt}">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontFamily" Value="{StaticResource MainControlFontFamily}"/>
        <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MainControlForegroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource MainControlForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <!--styling for the text terminal-->
    <Style x:Key="DarkTextTerminalStyle" TargetType="{x:Type controls:NetAFTextTerminal}">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Foreground" Value="YellowGreen"/>
        <Setter Property="FontFamily" Value="Cascadia Mono"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="4"/>
        <Style.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
        </Style.Resources>
    </Style>

    <!--styling for the markup terminal-->
    <Style x:Key="DarkMarkupTerminalStyle" TargetType="{x:Type controls:NetAFMarkupTerminal}">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Background" Value="Black"/>
        <Style.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
        </Style.Resources>
    </Style>
    
    <!--styling for split map layout-->
    <Style x:Key="DarkSplitMapLayoutStyle" TargetType="{x:Type outputlayouts:SplitMapLayout}">
        <Setter Property="SectionSpacing" Value="10"/>
        <Setter Property="TerminalStyle" Value="{StaticResource DarkMarkupTerminalStyle}"/>
        <Setter Property="RoomMapStyle">
            <Setter.Value>
                <Style TargetType="controls:NetAFMarkupRoomMap">
                    <Setter Property="Padding" Value="4"/>
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Width" Value="130"/>
                    <Setter Property="Height" Value="180"/>
                    <Setter Property="VerticalAlignment" Value="Top"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Style.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
        </Style.Resources>
    </Style>

    <!--styling for expander-->
    <Style x:Key="DarkExpanderStyle" TargetType="Expander">
        <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource MainControlForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MainControlForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        Background="{TemplateBinding Background}" 
                        CornerRadius="3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition x:Name="ContentRow" Height="0"/>
                            </Grid.RowDefinitions>
                            <ToggleButton x:Name="HeaderSite"
                                      Content="{TemplateBinding Header}"
                                      Foreground="{TemplateBinding Foreground}"
                                      FontFamily="{TemplateBinding FontFamily}"
                                      IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Padding="{TemplateBinding Padding}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent" Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow"
                                                  Data="M 0,0 L 4,4 L 8,0" 
                                                  Stroke="{TemplateBinding Foreground}"
                                                  StrokeThickness="2"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  RenderTransformOrigin="0.5,0.5"
                                                  Margin="5,0,10,0">
                                                    <Path.RenderTransform>
                                                        <RotateTransform Angle="0"/>
                                                    </Path.RenderTransform>
                                                </Path>
                                                <ContentPresenter Grid.Column="1" 
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Arrow" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="180"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ExpandSite" 
                                          Grid.Row="1" 
                                          Visibility="Collapsed" 
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="ContentRow" Property="Height" Value="*"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource MainControlForegroundDisabledBrush}"/>
                            <Setter Property="Background" Value="{StaticResource MainControlBackgroundDisabledBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--styling for file manager-->
    <Style x:Key="DarkNetAFFileManagerStyle" TargetType="{x:Type controls:NetAFFileManager}">
        <Setter Property="NewButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource FileManagerButtonStyle}">
                    <Setter Property="Content" Value="New"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="DeleteButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource FileManagerButtonStyle}">
                    <Setter Property="Content" Value="Delete"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="SaveButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource FileManagerButtonStyle}">
                    <Setter Property="Content" Value="Save"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="LoadButtonStyle">
            <Setter.Value>
                <Style TargetType="Button" BasedOn="{StaticResource FileManagerButtonStyle}">
                    <Setter Property="Content" Value="Load"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="StatusLabelStyle">
            <Setter.Value>
                <Style TargetType="Label">
                    <Setter Property="FontFamily" Value="{StaticResource MainControlFontFamily}"/>
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource MainControlForegroundBrush}"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="AvailableRestorePointsListBoxStyle">
            <Setter.Value>
                <Style TargetType="ListBox">
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="Foreground" Value="{StaticResource MainControlForegroundBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource MainControlForegroundBrush}"/>
                    <Setter Property="Background" Value="{StaticResource MainControlBackgroundBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBox">
                                <Border x:Name="MainBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="1"
                                        SnapsToDevicePixels="True">
                                    <ScrollViewer Foreground="Pink" Focusable="False" Padding="{TemplateBinding Padding}">
                                        <ScrollViewer.Resources>
