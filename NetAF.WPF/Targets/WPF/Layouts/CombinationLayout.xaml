<UserControl x:Class="NetAF.Targets.WPF.Layouts.CombinationLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetAF.Targets.WPF.Layouts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:PromptOnlyLayout Style="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:CombinationLayout}, Path=PromptOnlyLayoutStyle, Mode=OneWay}" Grid.Row="0"/>
        <local:ButtonOnlyLayout Style="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:CombinationLayout}, Path=ButtonOnlyLayoutStyle, Mode=OneWay}" Grid.Row="1"/>
    </Grid>
</UserControl>
