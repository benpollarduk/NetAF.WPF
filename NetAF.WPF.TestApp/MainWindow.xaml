<Window x:Class="NetAF.WPF.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:NetAF.Targets.WPF;assembly=NetAF.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <wpf:NetAFTerminal x:Name="NetAFTerminal" Grid.Row="0">
            <wpf:NetAFTerminal.TerminalStyle>
                <Style TargetType="TextBlock">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="Lime"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontFamily" Value="Courier New"/>
                </Style>
            </wpf:NetAFTerminal.TerminalStyle>
        </wpf:NetAFTerminal>
        <wpf:NetAFPrompt Grid.Row="1">
            <wpf:NetAFPrompt.PromptStyle>
                <Style TargetType="TextBox">
                    <Setter Property="Background" Value="DarkGray"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontFamily" Value="Courier New"/>
                </Style>
            </wpf:NetAFPrompt.PromptStyle>
        </wpf:NetAFPrompt>
    </Grid>
</Window>
