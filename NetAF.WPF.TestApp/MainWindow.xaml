<Window x:Class="NetAF.WPF.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:layouts="clr-namespace:NetAF.Targets.WPF.Layouts;assembly=NetAF.WPF" xmlns:controls="clr-namespace:NetAF.Targets.WPF.Controls;assembly=NetAF.WPF"
        mc:Ignorable="d"
        Title="NetAF.WPF.TestApp" Background="DarkGray" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <controls:NetAFTerminal x:Name="Terminal" FontSize="16" Margin="10" Padding="4" Grid.Row="0"/>
        <Grid Margin="10,0,10,10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Input:" VerticalContentAlignment="Center" Grid.Column="0"/>
            <RadioButton Name="PromptRadioButton" Content="Prompt" VerticalContentAlignment="Center" Grid.Column="2" Checked="PromptRadioButton_Checked"/>
            <RadioButton Name="ButtonsRadioButton" Content="Buttons" IsChecked="True" VerticalContentAlignment="Center" Grid.Column="4" Checked="ButtonsRadioButton_Checked"/>
            <RadioButton Name="CombinationRadioButton" Content="Combination" VerticalContentAlignment="Center" Grid.Column="6" Checked="CombinationRadioButton_Checked"/>
        </Grid>
        <ContentControl Name="InputControl" Margin="10,0,10,10" Grid.Row="2">
            <layouts:ButtonOnlyLayout/>
        </ContentControl>
    </Grid>
</Window>
