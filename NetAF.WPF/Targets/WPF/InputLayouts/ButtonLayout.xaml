<UserControl x:Class="NetAF.Targets.WPF.InputLayouts.ButtonLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetAF.Targets.WPF.InputLayouts"
             xmlns:wpf="clr-namespace:NetAF.Targets.WPF.Controls"
             xmlns:converters="clr-namespace:NetAF.Targets.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:DoubleToGridLengthConverter x:Key="DoubleToGridLengthConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ButtonLayout}, Path=SectionSpacing, Mode=OneWay, Converter={StaticResource DoubleToGridLengthConverter}}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <wpf:NetAFMovementCommandPicker x:Name="MovementCommandPicker"
            Style="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ButtonLayout}, Path=MovementCommandPickerStyle, Mode=OneWay}"
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.RowSpan="2">
        </wpf:NetAFMovementCommandPicker>
        <wpf:NetAFRegionMapCommandPicker x:Name="RegionMapCommandPicker"
            Style="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ButtonLayout}, Path=RegionMapCommandPickerStyle, Mode=OneWay}"
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.RowSpan="2">
        </wpf:NetAFRegionMapCommandPicker>
        <wpf:NetAFCommandPicker x:Name="GeneralCommandPicker"
             Style="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ButtonLayout}, Path=GeneralCommandPickerStyle, Mode=OneWay}"
             ShowPersistenceCommands="False" 
             ShowExecutionCommands="False" 
             ShowMovementCommands="False" 
             ShowSceneCommands="False"
             ShowAcknowledgeButton="False"
             ShowConversationCommands="False"
             ShowRegionMapCommands="False"
             Grid.Row="0"
             Grid.Column="2">
        </wpf:NetAFCommandPicker>
        <wpf:NetAFCommandPicker x:Name="SceneCommandPicker"
             Style="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ButtonLayout}, Path=SceneCommandPickerStyle, Mode=OneWay}"
             ShowPersistenceCommands="False" 
             ShowExecutionCommands="False" 
             ShowMovementCommands="False"
             ShowFrameCommands="False"
             ShowGlobalCommands="False"
             ShowInformationCommands="False"
             ShowUncategorizedCommands="False"
             ShowRegionMapCommands="False"
             Grid.Row="1"
             Grid.Column="2">
        </wpf:NetAFCommandPicker>
    </Grid>
</UserControl>
