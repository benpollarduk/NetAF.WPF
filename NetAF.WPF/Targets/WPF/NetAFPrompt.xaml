<UserControl x:Class="NetAF.Targets.WPF.NetAFPrompt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <TextBox Name="InputTextBox" Style="{Binding Path=PromptStyle, Mode=OneWay}" Grid.Row="1" PreviewKeyUp="InputTextBox_PreviewKeyUp"/>
</UserControl>
